<% form_for @formula do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :category_id %><br />
    <%= f.text_field :category_id %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :buffer %><br />
    <%= f.text_field :buffer %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
