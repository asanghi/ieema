<% title "Formulas: #{@formula.category.name} : #{@formula.name}" %>

<p>
  <strong>Formula: </strong>
  [<code>(<%= @formula.buffer %> + <%= formula_description(@formula) %>)</code>]
</p>

<% @formula.formula_components.each do |fc|  %>
<p>
  <%= fc.weight %>% <%= fc.commodity.name %>
  (<%= pluralize(fc.tender_month_difference,'month') %> before tender date and <%= pluralize(fc.billing_month_difference,'month') %> before billing date)
</p>
<% end %>

<p>
  <%= link_to "Edit", edit_formula_path(@formula) %>
</p>
